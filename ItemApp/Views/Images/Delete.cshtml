@model ItemApp.Models.Image

@{
    ViewData["Title"] = "Delete";
}


<h3>Are you sure you want to delete this image?</h3>
<p>This will not delete the actual file, only the reference to the P21 Item</p>
<div>
    <hr />
    <dl class="row">
        <dd class="col-sm-12">
            <img class="img-fluid" src="~/images/@Model.ImageLocation" asp-append-version="true" />
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a class="btn btn-outline-info" asp-action="Details" asp-controller="ItemMaster" asp-route-id="@Model.P21ItemID">Back to Detail</a>
    </form>
</div>
