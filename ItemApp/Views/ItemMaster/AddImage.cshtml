@model ItemApp.Models.Image

@{
    ViewData["Title"] = "AddImage";
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="AddImage" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="ImageFile" class="control-label"></label>
                <input asp-for="ImageFile" class="form-control" capture />
                <span asp-validation-for="ImageFile" class="text-danger"></span>
            </div>

            <input hidden asp-for="P21ItemID" value="@ViewBag.P21ItemID" />

            <div class="form-group">
                <input type="submit" value="Add Image" class="btn btn-primary" />
                <a class="btn btn-outline-info" asp-action="Details" asp-route-id="@ViewBag.P21ItemID">Back to Detail</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
